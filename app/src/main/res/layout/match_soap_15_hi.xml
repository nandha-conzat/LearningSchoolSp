<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choice_1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_1"
            android:text="A "
            android:textColor="@android:color/transparent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/choice_2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_2"
            android:text="B "
            android:textColor="@android:color/transparent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/choice_3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_3"
            android:text="C "
            android:textColor="@android:color/transparent"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_4"
            android:text="C" />

        <TextView
            android:id="@+id/soap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_5"
            android:text="A" />

        <TextView
            android:id="@+id/spoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/soap_s54_6"
            android:text="B" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageback_pa3_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imagehome_pa3_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageNext_pa3_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />


    </RelativeLayout>

</LinearLayout>