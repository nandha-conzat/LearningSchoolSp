<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/light"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/bottle_layout13"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bottle_image13"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bottle_s101_2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bond_layout13"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bond_image13"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bottle_s101_3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bowl_layout13"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bowl_image13"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bottle_s101_4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bound_layout13"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bound_image13"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bottle_s101_5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bitten_layout13"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bitten_image13"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bottle_s101_6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageback_pa2_v13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imagehome_pa2_v13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageNext_pa2_v13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>