<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spoon_v12"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pa1_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/no" />

        <TextView
            android:id="@+id/txt_dispaly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/yes" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa1_next"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_mixie"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/s34_1_hi" />

        <ImageView
            android:id="@+id/list_grinder"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/s34_2_hi" />

        <ImageView
            android:id="@+id/list_oven"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/s34_3_hi" />

        <ImageView
            android:id="@+id/list_spoon"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/s34_4_hi" />

        <ImageView
            android:id="@+id/list_mug"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:src="@drawable/s34_5_hi" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/pa2_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageback_pa2_v14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imagehome_pa2_v14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageNext_pa2_v14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>