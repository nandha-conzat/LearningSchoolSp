<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/real3">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/darg_shirt_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/drag_shirt"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixed_jeep_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">


        <ImageView
            android:id="@+id/fixed_jeep"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixed_pant_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fixed_jeep_layout"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/pant_heart"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixed_crook_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fixed_jeans_layout"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/jeep_fixed"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixed_jeans_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/plate_crook_fixed"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixed_shirt_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"

        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        android:gravity="center">

        <ImageView
            android:id="@+id/jeans_heart_fixed1"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:background="@drawable/shirt_s63_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageback_pa4_v8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imagehome_pa4_v8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageNext_pa4_v8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>