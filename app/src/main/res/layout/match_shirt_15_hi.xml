<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/shirt_s70_1" />

    <ImageView
        android:id="@+id/empty"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/shirt"
        android:layout_centerInParent="true"
        android:src="@drawable/shirt_s70_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/darg_frock_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/drag_frock_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shirt_s70_3" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_helmet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fixed_helmet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shirt_s70_4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_shirt_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/collar_shirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shirt_s70_5" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_skirt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/drag_shirt_frame_fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shirt_s70_6" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pa4_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageback_pa4_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imagehome_pa4_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/imageNext_pa4_v15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>

